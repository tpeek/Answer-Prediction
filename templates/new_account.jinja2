{% extends "base.jinja2" %}
{% block section %}
<main id="create">
  {% if error -%}
  <p class="error"><strong>Error</strong>: {{ error }}</p>
  {%- endif %}
     <script src="https://www.google.com/recaptcha/api.js" ></script>
  <form action="{{ request.route_url('new_account') }}" method="POST">
      <div class="field">
        <label for="username">Username</label>
        <input type="text" name="username" id="username"/><br><br>
    </div>
    <div class="field">
        <label for="password">Password</label>
        <input type="password" name="password" id="password"/>
    </div>
    <div class="control_row">
    <div class="g-recaptcha" data-sitekey="6Lfq1gkTAAAAAOpISZTIBWV4mWN0AVKpsIB9XZn4">
        </div>
        <input type="submit" name="Login" value="Create"/><br><br><br>
    </div>
</form>
</main>
{% endblock %}