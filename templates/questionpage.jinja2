{% extends "base.jinja2" %}
{% block section %}
    <main id="question">
        {% if request.authenticated_userid %}
            {% if question is none %}
                <p>There are no questions</p>
            {% else %}
            <link href="/static/responsive.css" rel="stylesheet" media="screen">
            <div id="questions">
                <p id="q_text">{{ question.text }}</p>
                <form action="{{ request.route_url('question') }}"
                method="POST" class="question_form">
                <input id="qu" type="hidden" name="question_id" value="{{ question.id }}">
                <input id="score" type="hidden" name="score" value="{{ score }}">
                <input id="predict" type="hidden" name="predict" value="{{ predict }}">
                    <ul id="choices">
                       <label>
                        <li>
                            1<br><input type="radio" name="answer" value="1">
                            Strongly Disagree</li>
                        </label>
                        <label>
                        <li>
                            2<br><input type="radio" name="answer" value="2">
                            Disagree</li>
                            </label>
                        <label>
                        <li>
                            3<br><input type="radio" name="answer" value="3">
                            Neutral</li>
                            </label>
                        <label>
                        <li>
                            4<br><input type="radio" name="answer" value="4">
                            Agree</li>
                            </label>
                        <label>
                        <li>
                            5<br><input type="radio" name="answer" value="5">
                            Strongly Agree</li>
                        </label>
                    </ul><br><br><br><br><br><br>
                    <input id="submit" type="submit" value="Submit" name="submit"/>
                </form><br>
                <button type="button" id="show_prediction">Predict</button>
                <p id="score_display">Score: {{ score }}</p><br>
                <p id="prediction" class="hide">Prediction: {{ prediction }}</p><br>
                {% endif %}
            </div>
        {% else %}
        <p>Please log in to answer questions</p>
        {% endif %}
    </main>
{% endblock %}